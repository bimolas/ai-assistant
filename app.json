{
  "expo": {
    "name": "YoRHa 2B",
    "slug": "2B",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/yorha-logo.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/yorha-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#B0AB98"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yorha.2b"
    },
    "android": {
      "package": "com.yorha.app2b",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/yorha-logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "QUERY_ALL_PACKAGES"
      ]
    },
    "web": {
      "favicon": "./assets/images/yorha-logo.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow YoRHa 2B to access your microphone for voice recording."
        }
      ]
    ]
  }
}
